@using CRReservation.COMMON.Services
@using CRReservation.COMMON.Enums.UserEnums
@inject UserStateService UserStateService;
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CRReservation.MOBILE</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Strona główna
            </NavLink>
        </div>
        @if (UserStateService.CurrentState.IsLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="classrooms">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Lista Sal
                </NavLink>
            </div>

            @if (UserStateService.CurrentState.Role == Role.Student)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="my-reservations">
                        <span class="bi bi-calendar-check-nav-menu" aria-hidden="true"></span> Moje Rezerwacje
                    </NavLink>
                </div>
            }

            @if (UserStateService.CurrentState.Role == Role.Prowadzący)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="my-calendar">
                        <span class="bi bi-calendar3-nav-menu" aria-hidden="true"></span> Mój Kalendarz
                    </NavLink>
                </div>
            }

            @if (UserStateService.CurrentState.Role == Role.Administrator)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/reservations">
                        <span class="bi bi-list-check-nav-menu" aria-hidden="true"></span> Rezerwacje
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/create-user">
                        <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span> Dodaj Użytkownika
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/create-classroom">
                        <span class="bi bi-building-add-nav-menu" aria-hidden="true"></span> Dodaj Salę
                    </NavLink>
                </div>
            }
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Login">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Logowanie
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        UserStateService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        UserStateService.OnChange -= StateHasChanged;
    }
}

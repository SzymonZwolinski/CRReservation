@using System.ComponentModel.DataAnnotations
@using CRReservation.COMMON.Services
@inject UserStateService UserStateService
@inject NavigationManager Navigation

@page "/login"

<div class="login-container">
    <EditForm Model="@Model" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <h3>Zaloguj się!</h3>
        <div class="form-group">
            <label for="username">Nazwa użytkownika:</label>
            <InputText id="username" @bind-Value="Model.Username" class="form-control" />
            <ValidationMessage For="@(() => Model.Username)" />
        </div>
        <div class="form-group">
            <label for="password">Hasło:</label>
            <InputText id="password" @bind-Value="Model.Password" type="password" class="form-control" />
            <ValidationMessage For="@(() => Model.Password)" />
        </div>
        <button type="submit" class="btn btn-primary">Zaloguj się</button>
    </EditForm>
</div>

@code {
    private LoginModel Model = new LoginModel();

    private void HandleLogin()
    {
        UserStateService.SetState(true, "test", Enums.UserEnums.Role.Administrator);
        Navigation.NavigateTo("/");
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Nazwa użytkownika jest wymagana")]
        public string Username { get; set; }

        [Required(ErrorMessage = "Hasło jest wymagane"), DataType(DataType.Password)]
        public string Password { get; set; }
    }
}
@page "/admin/create-user"
@using CRReservation.COMMON.Enums.UserEnums
@using CRReservation.COMMON.Models
@using CRReservation.COMMON.States
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]
@inject NavigationManager NavigationManager

<h3>Dodaj Nowego Użytkownika</h3>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <EditForm Model="@newUser" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label for="username" class="form-label">Nazwa Użytkownika</label>
                        <InputText id="username" class="form-control" @bind-Value="newUser.UserName" />
                    </div>

                    <div class="mb-3">
                        <label for="role" class="form-label">Rola</label>
                        <InputSelect id="role" class="form-control" @bind-Value="newUser.Role">
                            @foreach (var role in Enum.GetValues(typeof(Role)))
                            {
                                <option value="@role">@role</option>
                            }
                        </InputSelect>
                    </div>

                    @* Password field would go here, omitting for simplicity/security in this demo *@

                    <button type="submit" class="btn btn-success">Utwórz Użytkownika</button>
                    <a href="/" class="btn btn-secondary">Anuluj</a>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private User newUser = new User();

    private void HandleValidSubmit()
    {
        // TODO: Call service to create user
        Console.WriteLine($"Creating user: {newUser.UserName} with role {newUser.Role}");
        NavigationManager.NavigateTo("/");
    }
}

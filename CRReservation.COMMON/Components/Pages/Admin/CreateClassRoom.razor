@page "/admin/create-classroom"
@using CRReservation.COMMON.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]
@inject NavigationManager NavigationManager

<h3>Dodaj Nową Salę</h3>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <EditForm Model="@newClassRoom" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label for="name" class="form-label">Nazwa Sali</label>
                        <InputText id="name" class="form-control" @bind-Value="newClassRoom.Name" />
                    </div>

                    <div class="mb-3">
                        <label for="capacity" class="form-label">Pojemność</label>
                        <InputNumber id="capacity" class="form-control" @bind-Value="newClassRoom.Capacity" />
                    </div>

                    <div class="mb-3 form-check">
                        <InputCheckbox id="hasProjector" class="form-check-input" @bind-Value="newClassRoom.HasProjector" />
                        <label class="form-check-label" for="hasProjector">Rzutnik</label>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Opis</label>
                        <InputTextArea id="description" class="form-control" @bind-Value="newClassRoom.Description" />
                    </div>

                    <button type="submit" class="btn btn-success">Utwórz Salę</button>
                    <a href="/" class="btn btn-secondary">Anuluj</a>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    // Assuming a constructor exists or properties are settable.
    // If ClassRoom requires constructor arguments, we might need a DTO or a wrapper.
    // Let's check ClassRoom definition first if this fails, but for now assume parameterless constructor or DTO.
    private ClassRoomViewModel newClassRoom = new ClassRoomViewModel();

    private void HandleValidSubmit()
    {
        // TODO: Call service to create classroom
        Console.WriteLine($"Creating classroom: {newClassRoom.Name}");
        NavigationManager.NavigateTo("/");
    }

    public class ClassRoomViewModel
    {
        public string Name { get; set; } = string.Empty;
        public int Capacity { get; set; }
        public bool HasProjector { get; set; }
        public string Description { get; set; } = string.Empty;
    }
}

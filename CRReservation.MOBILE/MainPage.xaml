             xmlns:ui="clr-namespace:CRReservation.COMMON.Components;assembly=CRReservation.COMMON"
             
             x:Class="CRReservation.MOBILE.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <BlazorWebView HostPage="_content/CRReservation.COMMON/wwwroot/index.html">

        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type ui:Routes}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>